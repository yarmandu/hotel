@model Proyecto_Hoteleria.Models.ReservaVM.ListarReservaVM
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (!string.IsNullOrEmpty(ViewBag.Mensaje))
{
    <div class="alert alert-info">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Mensaje:</span>
        <strong> Mensaje: </strong>@ViewBag.Mensaje
    </div>
}

<head>
    <script type="text/javascript" src="@Url.Content("~/Scripts/scripts/Reserva.js")"></script>
    @{

        <script type="text/javascript">
            var reserva = reserva || {};
            reserva.Urls = reserva.Urls || {};
            reserva.Urls.baseUrl = '@Url.Action("~")';
            reserva.Urls.editarReservaUrl = '@Url.Action("Editar", "ReservaHabitacion")';
            reserva.Urls.searchReservaUrl = '@Url.Action("Buscar", "ReservaHabitacion")';
            reserva.Urls.deleteReservaUrl = '@Url.Action("Eliminar", "ReservaHabitacion")';
        </script>

    }
</head>

<div class="page animsition">
    <div class="page-header">
        <h1 class="page-title">RESERVA HABITACIÓN</h1>
    </div>
    <div class="panel-body">
        <div class="form-horizontal">
            <form id="formAusenciaFiltro" role="form">
                <div class="col-sm-12">
                    <div class="form-group form-material">
                        @Html.Label("descTipoDoc", "Desc. Documento", htmlAttributes: new { @class = "control-label col-sm-2" })
                        <div class="col-sm-4">
                            @Html.EditorFor(model => model.Filtro.descTipoDoc, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nro Documento" } })
                        </div>
                    </div>
                </div>
            </form>

            <div class="col-sm-12">
                <div class="text-center">
                    <button id="btnLimpiar" class="btn btn-default" type="button" onclick="">Limpiar</button>
                    <button id="btnBuscar" class="btn btn-primary" type="button" onclick="">Buscar</button>
                </div>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <div id="divGrid" class=" col-sm-12">
            @Html.Partial("Grid")
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade modal-3d-slit" id="ModalReserva" aria-hidden="true"
     aria-labelledby="exampleModalTitle" role="dialog" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">Reservas</h4>
            </div>
            <div class="modal-body" id="divModalReserva">
            </div>
        </div>
    </div>
</div>

<script>

    (function () {
        debugger;
        iniciar();
    })();

    function eliminar(id) {
        debugger;
        var urlEliminarReserva = reserva.Urls.deleteReservaUrl;

        if (confirm("¿Está seguro de realizar esta acción?")) {
            if (id > 0)
                window.location.href = urlEliminarReserva + '/' + id;
        }

    }
</script>