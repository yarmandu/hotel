@model Proyecto_Hoteleria.Models.ReservaVM.ListarReservaVM
@{
    Layout = null;
}

<div class="panel-body">
    <div id="divGridPagina" class="table-responsive">
        @Html.Hidden("items_count", Model.Elementos.Count())
        <table class="table table-striped table-condensed text-center">
            <tr>
                <th class="text-center col-sm-2">
                    <a class="punteroMouse">Cod. Reserva</a>
                </th>
                <th class="text-center col-sm-2">
                    <a class="punteroMouse">Desc. Documento</a>
                </th>
                <th class="text-center col-sm-2">
                    <a class="punteroMouse">Fecha Inicio</a>
                </th>
                <th class="text-center col-sm-2">
                    <a class="punteroMouse">Fecha Fin</a>
                </th>
                <th class="text-center col-sm-2">
                    <a class="punteroMouse">Cod. Habitación</a>
                </th>
                <th class="text-right col-sm-1">Acciones</th>
            </tr>

            @for (var i = 0; i < Model.Elementos.Count(); i++)
            {
                var item = Model.Elementos.ToList()[i];
                <tr>
                    <td class="text-center col-sm-1">@item.idReserva</td>
                    <td class="text-center col-sm-2">@item.descTipoDoc</td>
                    <td class="text-center col-sm-1">@item.fechaInicio</td>
                    <td class="text-center col-sm-1">@item.fechaFin</td>
                    <td class="text-center col-sm-1">@item.idTipoHabitacion</td>
                    <td class="text-right col-sm-1">
                        <a class="btn btn-sm btn-icon btn-primary btn-round" title="Aprobar" data-toggle="tooltip" data-original-title="Aprobar" onclick="aprobar(@item.idReserva);">
                            <i class="icon md-submit" aria-hidden="true"></i>
                        </a>
                        <a class="btn btn-sm btn-icon btn-primary btn-round" title="Cancelar" onclick="cancelar(@item.idReserva);" data-toggle="tooltip"
                           data-original-title="Cancelar">
                            <i class="icon md-delete" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
