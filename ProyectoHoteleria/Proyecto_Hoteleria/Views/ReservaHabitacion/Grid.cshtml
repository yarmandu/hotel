@model Proyecto_Hoteleria.Models.ReservaVM.ListarReservaVM
@{
    Layout = null;
}


<div class="page-header">
    <div class="page-header-actions">
        <button type="button" class="btn btn-sm btn-icon btn-primary btn-round" data-toggle="modal" data-target="#ModalReserva"
                data-original-title="Nuevo" data-id="-1" data-estado="1" name="Nuevo">
            <i class="icon md-sign-in" aria-hidden="true"></i>
        </button>
    </div>
</div>

<div class="panel-body">
    <div id="divGridPagina" class="table-responsive">
        @Html.Hidden("items_count", Model.Elementos.Count())
        <table class="table table-striped table-condensed text-center">
            <tr>
                <th class="text-center col-sm-2">
                    <a class="punteroMouse">Desc. Documento</a>
                </th>
                <th class="text-center col-sm-2">
                    <a class="punteroMouse">Cant Habitacion</a>
                </th>
                <th class="text-center col-sm-2">
                    <a class="punteroMouse">Tipo Habitacion</a>
                </th>
                <th class="text-center col-sm-2">
                    <a class="punteroMouse">Fecha Inicio</a>
                </th>
                <th class="text-center col-sm-2">
                    <a class="punteroMouse">Fecha Fin</a>
                </th>
                <th class="text-center col-sm-2">
                    <a class="punteroMouse">Tipo Pago</a>
                </th>
                <th class="text-center col-sm-2">
                    <a class="punteroMouse">Total</a>
                </th>
                <th class="text-right col-sm-1">Acciones</th>
            </tr>

            @for (var i = 0; i < Model.Elementos.Count(); i++)
            {
                var item = Model.Elementos.ToList()[i];
                <tr>
                    <td class="text-center col-sm-1">@item.descTipoDoc</td>
                    <td class="text-center col-sm-2">@item.cantHabitacion</td>
                    <td class="text-center col-sm-2">@item.tipoHabitacion</td>
                    <td class="text-center col-sm-1">@item.fechaInicio</td>
                    <td class="text-center col-sm-1">@item.fechaFin</td>
                    <td class="text-center col-sm-1">@item.tipoPago</td>
                    <td class="text-center col-sm-1">@item.total</td>
                    <td class="text-right col-sm-1">
                        <a class="btn btn-sm btn-icon btn-primary btn-round" title="Editar" data-toggle="modal" data-original-title="Editar" 
                           data-target="#ModalReserva" data-id="@item.idReserva" data-estado="1">
                            <i class="icon md-edit" aria-hidden="true"></i>
                        </a>
                        <a class="btn btn-sm btn-icon btn-primary btn-round" title="Eliminar" onclick="eliminar(@item.idReserva);" data-toggle="tooltip"
                           data-original-title="Eliminar">
                            <i class="icon md-delete" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
