@model Proyecto_Hoteleria.Models.ListarClienteVM
@{
    ViewBag.Title = "Grid";
    Layout = "";
}

<div class="page-header">
    <div class="page-header-actions">
        <button type="button" class="btn btn-sm btn-icon btn-primary btn-round" data-toggle="modal" data-target="#ModalCliente"
                data-original-title="Nuevo" data-id="-1" name="Nuevo">
            <i class="icon md-sign-in" aria-hidden="true"></i>
        </button>
    </div>
</div>

<div class="panel-body">
    <div id="divGridPagina" class="table-responsive">
        @Html.Hidden("items_count", Model.Elementos.Count())
        <table class="table table-striped table-condensed text-center">
            <tr>
                <th class="text-center col-sm-2">
                    <a class="punteroMouse">DNI</a>
                </th>
                <th class="text-center col-sm-2">
                    <a class="punteroMouse">Nombres</a>
                </th>
                <th class="text-center col-sm-2">
                    <a class="punteroMouse">Ape. Paterno</a>
                </th>
                <th class="text-center col-sm-2">
                    <a class="punteroMouse">Ape. Materno</a>
                </th>
                <th class="text-center col-sm-2">
                    <a class="punteroMouse">Dirección</a>
                </th>
                <th class="text-center col-sm-2">
                    <a class="punteroMouse">Teléfono</a>
                </th>
                <th class="text-center col-sm-2">
                    <a class="punteroMouse">Tipo Cliente</a>
                </th>
                <th class="text-center col-sm-2">
                    <a class="punteroMouse">Tipo Residencia</a>
                </th>
                <th class="text-right col-sm-1">Acciones</th>
            </tr>

            @for (var i = 0; i < Model.Elementos.Count(); i++)
            {
                var item = Model.Elementos.ToList()[i];
                <tr>
                    <td class="text-center col-sm-1">@item.descTipoDoc</td>
                    <td class="text-center col-sm-2">@item.Nombres</td>
                    <td class="text-center col-sm-2">@item.ApePaterno</td>
                    <td class="text-center col-sm-1">@item.ApeMaterno</td>
                    <td class="text-center col-sm-1">@item.Direccion</td>
                    <td class="text-center col-sm-1">@item.Telefono</td>
                    <td class="text-center col-sm-1">@item.IdTipoCliente</td>
                    <td class="text-center col-sm-1">@item.IdTipoResidencia</td>
                    <td class="text-right col-sm-1">
                        <a class="btn btn-sm btn-icon btn-primary btn-round" title="Editar" data-toggle="modal" data-original-title="Editar" data-target="#ModalCliente" data-id="@item.IdCliente">
                            <i class="icon md-edit" aria-hidden="true"></i>
                        </a>
                        <a class="btn btn-sm btn-icon btn-primary btn-round" title="Eliminar" onclick="eliminar(@item.IdCliente);" data-toggle="tooltip"
                           data-original-title="Eliminar">
                            <i class="icon md-delete" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>



