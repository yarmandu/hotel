@model Proyecto_Hoteleria.Models.ListarHabitacionVM

@{
    ViewBag.Title = "Grid";
    Layout = null;
}

<div class="page-header">
    <div class="page-header-actions">
        <button type="button" class="btn btn-sm btn-icon btn-primary btn-round" data-toggle="modal" data-target="#ModalHabitacion"
                data-original-title="Nuevo" data-id="-1" name="Nuevo">
            <i class="icon md-sign-in" aria-hidden="true"></i>
        </button>
    </div>
</div>

<div class="panel-body">
    <div id="divGridPagina" class="table-responsive">
        @Html.Hidden("items_count", Model.Elementos.Count())
        <table class="table table-striped table-condensed text-center">
            <tr>
                <th class="text-center col-sm-2">
                    <a class="punteroMouse">Nro Habitación</a>
                </th>
                <th class="text-center col-sm-2">
                    <a class="punteroMouse">Tipo Habitación</a>
                </th>
                <th class="text-center col-sm-2">
                    <a class="punteroMouse">Tipo Servicio</a>
                </th>
                <th class="text-center col-sm-2">
                    <a class="punteroMouse">Precio</a>
                </th>
                <th class="text-center col-sm-2">
                    <a class="punteroMouse">Cant Camas</a>
                </th>                
                <th class="text-right col-sm-1">Acciones</th>
            </tr>

            @for (var i = 0; i < Model.Elementos.Count(); i++)
            {
                var item = Model.Elementos.ToList()[i];
                <tr>
                    <td class="text-center col-sm-1">@item.NroHanitacion</td>
                    <td class="text-center col-sm-2">@item.tipoHabitacion</td>
                    <td class="text-center col-sm-2">@item.tipoServicio</td>
                    <td class="text-center col-sm-1">@item.precio</td>
                    <td class="text-center col-sm-1">@item.cantCamas</td>
                    <td class="text-right col-sm-1">
                        <a class="btn btn-sm btn-icon btn-primary btn-round" title="Editar" data-toggle="modal" data-original-title="Editar" data-target="#ModalHabitacion" data-id="@item.NroHanitacion">
                            <i class="icon md-edit" aria-hidden="true"></i>
                        </a>
                        <a class="btn btn-sm btn-icon btn-primary btn-round" title="Eliminar" onclick="eliminar(@item.NroHanitacion);" data-toggle="tooltip"
                           data-original-title="Eliminar">
                            <i class="icon md-delete" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>



